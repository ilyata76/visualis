#------------------------------------------
# Vampire input file for Time-series
#------------------------------------------

#------------------------------------------
# Creation attributes:
#------------------------------------------
create:crystal-structure=hcp

#------------------------------------------
# System Dimensions:
#------------------------------------------
dimensions:unit-cell-size = 2.507 !A
dimensions:system-size-x = 200 !nm
dimensions:system-size-y = 10 !nm
dimensions:system-size-z = 0.1 !nm
cells:macro-cell-size=10.1 !A

#------------------------------------------
# Material Files:
#------------------------------------------
material:file=Co.mat

#------------------------------------------
# Simulation attributes:
#------------------------------------------
sim:total-time-steps=1000000
sim:time-steps-increment=1000
sim:time-step=1.0 !fs 
sim:temperature=0.0
sim:applied-field-strength = 0.3 !T
sim:applied-field-unit-vector=0.99,0.1,0
#------------------------------------------
# Program and integrator details
#------------------------------------------
sim:program=time-series
sim:integrator=llg-heun 
dipole:solver = tensor
dipole:field-update-rate=10
dipole:cutoff-radius=1

#------------------------------------------
# data output
#------------------------------------------
output:time-steps
output:real-time 
output:magnetisation
output:anisotropy-energy
output:exchange-energy
output:magnetostatic-energy
output:applied-field-energy
output:total-energy

screen:time-steps

config:atoms
config:atoms-output-rate = 1

